{
  "manifest_version": 3,
  "name": "Expert Annotator",
  "version": "0.3.0",
  "description": "Document-centric expert annotation workflow with AI suggestions.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Expert Annotator",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/pdf.min.js",
        "vendor/pdf.worker.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
